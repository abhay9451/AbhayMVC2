@model AbhayMVC2.Models.Employee
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-6 p-3 offset-3">
        <form action="/Employee/CreateEmployee" method="post" enctype="multipart/form-data" >
            <div class="form-group">
                <label>Employee Name</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Employee Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Employee Mobile Number </label>
                <input type="text" asp-for="Mobile" class="form-control" />
            </div>
            <div class="form-group">
                <label>Employee Salary</label>
                <input asp-for="Salary" class="form-control" />
            </div>
            <div class="form-group">
                <label>Employee Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label>Employee Department</label>
                <select asp-for="Dept_Id" class="form-control">
                    <option value="">Select</option>
                    @foreach (var d in ViewBag.dept)
                    {
                        <option value="@d.Id">@d.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Employee Image</label>
                <input type= "file" name="Image" accept="jpeg/jpg/png"/> 
                <p class="text-danger">@ViewBag.fileError</p>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>

    </div>
</div>
